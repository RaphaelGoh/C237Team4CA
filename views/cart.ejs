<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold text-danger" href="/">Gangnam Spice</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Cart Content -->
  <div class="container mt-4">
    <h2>Shopping Cart</h2>

    <% if (cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <form action="/cart/edit" method="POST">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Product</th>
              <th>Image</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Total</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% let total = 0; %>
            <% cart.forEach(item => { %>
              <tr>
                <td><%= item.productName %></td>
                <td><img src="/images/<%= item.image %>" width="80" class="img-thumbnail"></td>
                <td>$<%= item.price.toFixed(2) %></td>
                <td>
                  <input type="hidden" name="productIds" value="<%= item.productId %>">
                  <input type="number" name="quantities" value="<%= item.quantity %>" min="1" class="form-control" required>
                </td>
                <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                <td>
                  <a href="/cart/delete/<%= item.productId %>" class="btn btn-danger btn-sm"
                    onclick="return confirm('Are you sure you want to remove this item?')">Delete</a>
                </td>
              </tr>
              <% total += item.price * item.quantity; %>
            <% }); %>
          </tbody>
        </table>

        <h4>Total: $<%= total.toFixed(2) %></h4>

    <% } %>

    <% if (cart.length !== 0) { %>
      <button type="submit" class="btn btn-success">Update Quantities</button>
    <% } %>

    <a href="/menu" class="btn btn-danger">Menu</a>
    <% if (cart.length !== 0) { %>
      <a href="/checkout" class="btn btn-success ms-2">Checkout</a>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
