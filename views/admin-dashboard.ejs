<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard | Gangnam Spice</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Bootstrap & Google Fonts -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@500;700&display=swap" rel="stylesheet">

  <!-- Animate.css -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Noto Sans KR', sans-serif;
      background: #fafafa;
    }
    h1 {
      font-weight: 700;
      color: #d63384;
    }
    .btn-success, .btn-warning, .btn-danger {
      border-radius: 25px;
      font-weight: 500;
    }
    .table th, .table td {
      vertical-align: middle;
    }
    .product-img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      border-radius: 8px;
    }
    .action-btns a {
      margin-right: 5px;
    }
    .fade-in-up {
      animation: fadeInUp 0.7s ease;
    }
    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>

<body>
  <div class="container mt-5 fade-in-up">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="animate__animated animate__fadeInLeft">üë®‚Äçüç≥ Admin Dashboard</h1>
      <a href="/logout" class="btn btn-outline-dark">Logout</a>
    </div>

    <div class="mb-3">
      <a href="/addProduct" class="btn btn-success animate__animated animate__pulse animate__infinite">‚ûï Add Product</a>
      <a href="/menu" class="btn btn-success animate__animated animate__pulse animate__infinite">‚ûï Menu</a>
      <a href="/admin-messages" class="btn btn-success animate__animated animate__pulse animate__infinite">‚ûï Messages</a>
    </div>

    <div class="table-responsive shadow-sm p-3 bg-white rounded">
      <table class="table table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Qty</th>
            <th>Price ($)</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr class="fade-in-up">
              <td>
                <% if (product.image) { %>
                  <img src="/images/<%= product.image %>" alt="Image" class="product-img">
                <% } else { %>
                  <span class="text-muted">No image</span>
                <% } %>
              </td>
              <td><%= product.productName %></td>
              <td><%= product.quantity %></td>
              <td><%= product.price.toFixed(2) %></td>
              <td class="text-center action-btns">
                <a href="/editProduct/<%= product.productId %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/deleteProduct/<%= product.productId %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
