<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Messages | Gangnam Spice</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Bootstrap & Google Fonts -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@500;700&display=swap" rel="stylesheet">

  <!-- Animate.css for animations -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Noto Sans KR', sans-serif;
      background: #fafafa;
    }
    h1 {
      font-weight: 700;
      color: #d63384; /* Stylish pink color from example */
    }
    .btn-danger {
      border-radius: 25px;
      font-weight: 500;
    }
    .table th, .table td {
      vertical-align: middle;
    }
    .message-content {
        max-width: 400px;
        white-space: pre-wrap;
        word-wrap: break-word;
    }
    .fade-in-up {
      animation: fadeInUp 0.7s ease;
    }
    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>

<body>
  <div class="container mt-5 fade-in-up">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="animate__animated animate__fadeInLeft">üìß Customer Messages</h1>
      <a href="/logout" class="btn btn-outline-dark">Logout</a>
    </div>

    <div class="mb-3">
      <a href="/admin-dashboard" class="btn btn-secondary">‚¨ÖÔ∏è Back to Dashboard</a>
    </div>

    <div class="table-responsive shadow-sm p-3 bg-white rounded">
      <table class="table table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>From</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Message</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (messages.length > 0) { %>
            <% messages.forEach(message => { %>
              <tr class="fade-in-up">
                <td><%= message.name %></td>
                <td><a href="mailto:<%= message.email %>"><%= message.email %></a></td>
                <td><%= message.number || 'N/A' %></td>
                <td class="message-content"><%= message.message %></td>
                <td class="text-center">
                  <a href="/admin-messages/delete/<%= message.messageId %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
                <td colspan="5" class="text-center text-muted p-4">You have no new messages.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
